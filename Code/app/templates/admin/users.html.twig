{% extends 'base.html.twig' %}

{% block title %}Seznam uživatelů{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4">Seznam uživatelů</h1>

        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Uživatelské jméno</th>
                    <th scope="col">Role</th>
                    <th scope="col">Datum registrace</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.username }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge bg-primary">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>{{ user.registeredAt ? user.registeredAt|date('d.m.Y H:i:s') : 'N/A' }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Žádní uživatelé nebyli nalezeni.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
