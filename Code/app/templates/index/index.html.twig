{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}
    <style>
    .latest-article {
    margin-top: 20px;
}

.article-main {
    display: flex;
    margin-bottom: 30px;
}

.article-image {
    width: 300px;
    height: auto;
    margin-right: 20px;
}

.article-info {
    flex: 1;
}

.recent-articles {
    margin-top: 40px;
}

.article-item {
    display: flex;
    margin-bottom: 20px;
}

.article-thumbnail {
    width: 100px;
    height: 100px;
    object-fit: cover;
    margin-right: 20px;
}

.article-summary {
    flex: 1;
}

h3 {
    margin-bottom: 20px;
}

h4 {
    margin-bottom: 10px;
}

a {
    color: #007bff;
    text-decoration: none;
}
</style>
    <main>
        <div class="banner-container">
            <img src="{{ asset('img/banner.png') }}" alt="Banner">
        </div>

        <section class="latest-article">
            {% if latestArticle %}
                <div class="article-main">
                    <img src="{{ asset('uploads/images/' ~ latestArticle.image) }}" alt="Miniatura" class="article-image">
                    <div class="article-info">
                        <h2>{{ latestArticle.title }}</h2>
                        <p><strong>{{ latestArticle.author }}</strong> | {{ latestArticle.createdAt|date('d.m.Y H:i') }}</p>
                        <p>{{ latestArticle.content|slice(0, 150) }}...</p>
                    </div>
                </div>
            {% endif %}
        </section>

        <section class="recent-articles">
            <h3>Další články</h3>
            {% for article in recentArticles %}
                <div class="article-item">
                    <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="Miniatura" class="article-thumbnail">
                    <div class="article-summary">
                        <h4>{{ article.title }}</h4>
                        <p>{{ article.content|slice(0, 100) }}...</p>
                        <a href="{{ path('article_detail', {'id': article.id}) }}">Číst více</a>
                    </div>
                </div>
            {% endfor %}
        </section>
    </main>
{% endblock %}
