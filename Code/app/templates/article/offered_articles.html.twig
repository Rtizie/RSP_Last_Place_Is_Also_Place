{% extends 'base.html.twig' %}

{% block title %}SND - Nabízené články{% endblock %}

{% block body %}
<h1 class="text-center mb-4">Nabízené články</h1>
<div class="row">
    {% for article in articles %}
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <h5 class="text-muted mb-0 me-3"><i class="fas fa-newspaper me-2"></i> {{ article.title }}</h5>
                        <p class="text-muted mb-0 me-3"><i class="fas fa-user"></i> {{ article.author }}</p>
                        <p class="text-muted mb-0 me-3"><i class="fas fa-hourglass-start"></i> Čeká na schválení</p>
                        <p class="text-muted mb-0"><i class="fas fa-calendar-alt me-2"></i> {{ article.createdAt|date('d.m.Y H:i') }}</p>
                    </div>
                    <div class="d-flex">
                        <a href="{{ path('recenzent_article', {id: article.id}) }}" class="btn btn-primary m-1">
                            <i class="fas fa-eye"></i> Zobrazit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
