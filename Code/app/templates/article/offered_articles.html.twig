{% extends 'base.html.twig' %}

{% block title %}SND - Nabízené články{% endblock %}

{% block body %}
<h1 class="text-center mb-4">Nabízené články</h1>
<div class="row">
    {% for article in articles %}
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <p class="text-muted mb-0" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden;"><i class="fas fa-newspaper me-2"></i> {{ article.title }}</p>
                        </div>

                        <div class="col-md-2">
                            <p class="text-muted mb-0"><i class="fas fa-user"></i> {{ article.author }}</p>
                        </div>

                        <div class="col-md-2">
                            <p class="text-muted mb-0"><i class="fas fa-calendar-alt me-2"></i> {{ article.createdAt|date('d.m.Y H:i') }}</p>
                        </div>

                        <div class="col-md-4">
                            {% if article.status == 'Article was rewrited and offered' %}
                                <p class="text-muted mb-0"><i class="fas fa-refresh"></i> Článek byl přepsán a čeká na nové schválení</p>
                            {% else %}
                                <p class="text-muted mb-0"><i class="fas fa-hourglass-start"></i> Čeká na schválení</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="d-flex justify-content-end position-absolute top-0 end-0 p-2">
                        <!-- Tlačítko pro redaktora (existující) -->
                        <a href="{{ path('redaktor_article', {id: article.id}) }}" class="btn btn-primary">
                            <i class="fas fa-eye"></i> Zobrazit
                        </a>
                        <!-- Nové tlačítko pro recenzenta -->
                        <a href="{{ path('recenzent_article', {id: article.id}) }}" class="btn btn-secondary ms-2">
                            <i class="fas fa-eye"></i> Zobrazit hodnocení
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12 text-center">
            <p class="text-muted">Žádné nabízené články nejsou k dispozici.</p>
        </div>
    {% endfor %}
</div>
{% endblock %}
