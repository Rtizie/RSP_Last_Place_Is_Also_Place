{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ article.title }}</h1>
        <p><strong>Autor:</strong> {{ article.author }}</p>
        <p><strong>Datum přidání:</strong> {{ article.createdAt|date('d.m.Y') }}</p>
        
        <div class="my-3">
            <!-- Nastavení maximální šířky obrázku na 600px -->
            <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="{{ article.title }}" class="img-fluid rounded" style="max-width: 600px; width: 100%; height: auto;">
        </div>
        
        <p>{{ article.content }}</p>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="d-flex justify-content-start mt-3">
                <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger me-2">Smazat</a>
                <a href="{{ path('article_list') }}" class="btn btn-secondary">Zpět na seznam článků</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
