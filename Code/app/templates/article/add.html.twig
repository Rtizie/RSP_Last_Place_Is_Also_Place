{% extends 'base.html.twig' %}

{% block title %}Přidat článek{% endblock %}

{% block body %}
    <h1>Přidat nový článek</h1>

    {{ form_start(form) }}
    
    <div class="mb-3">
        {{ form_label(form.title) }}
        {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.content) }}
        {{ form_widget(form.content, { 'attr': {'class': 'form-control', 'rows': 5} }) }}
        {{ form_errors(form.content) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.category) }}
        {{ form_widget(form.category, { 'attr': {'class': 'form-select'} }) }}
        {{ form_errors(form.category) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.image) }}
        {{ form_widget(form.image, { 'attr': {'class': 'form-control-file'} }) }}
        {{ form_errors(form.image) }}
    </div>

    <button type="submit" class="btn btn-primary">Sdílet článek</button>

    {{ form_end(form) }}
{% endblock %}
